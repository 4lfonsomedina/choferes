<?xml version='1.0' encoding='utf-8'?>
<widget id="com.example.chofer" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>chofer</name>
    <description>
        Aplicacion de kiosko para choferes
    </description>
    <author email="4lfonsomedina@gmail.com" href="http://ferbis.com">
        Ferbis Technology
    </author>
    <plugin name="cordova-plugin-network-information" source="npm" spec="~1.3.3" value="Necesario para consultar catalogo de productos" />
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
